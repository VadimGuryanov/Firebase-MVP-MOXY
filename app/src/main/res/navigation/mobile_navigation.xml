<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kpfu.itis.firebasemvp.presenter.nav_ui.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_activity"
            app:destination="@id/navigation_activity" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_home_deep"
            app:destination="@id/navigation_home_deep" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="kpfu.itis.firebasemvp.presenter.nav_ui.ui.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="kpfu.itis.firebasemvp.presenter.nav_ui.ui.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_deep_notification"
            app:destination="@id/navigation_deep_notification" />
    </fragment>
    <activity
        android:id="@+id/navigation_activity"
        android:name="kpfu.itis.firebasemvp.presenter.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/navigation_deep_notification"
        android:name="kpfu.itis.firebasemvp.presenter.nav_ui.ui.NotificationDeepFragment"
        android:label="NotificationDeepFragment" />
    <fragment
        android:id="@+id/navigation_home_deep"
        android:name="kpfu.itis.firebasemvp.presenter.nav_ui.ui.HomeDeepFragment"
        android:label="HomeDeepFragment" />

</navigation>
